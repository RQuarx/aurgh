<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="3.0" />

  <object class="GtkWindow" id="aurgh_window">

    <property name="title">AUR Graphical Helper</property>
    <property name="name">aurgh-window</property>
    <property name="visible">true</property>
    <child>

      <object class="GtkBox">

        <property name="name">aurgh-container</property>
        <property name="visible">true</property>
        <property name="orientation">vertical</property>
        <child>

          <object class="GtkBox">

            <property name="name">aurgh-top-container</property>
            <property name="hexpand">true</property>
            <property name="visible">true</property>
            <property name="valign">start</property>
            <property name="halign">fill</property>
            <child>

              <object class="GtkBox">

                <property name="name">aurgh-tabs-container</property>
                <property name="hexpand">true</property>
                <property name="halign">start</property>
                <child>

                  <object class="GtkToggleButton" id="aur_tab_button">

                    <property name="label">AUR</property>
                    <property name="name">aurgh-tab-buttons</property>
                  </object>

                </child>

                <child>
                  <object class="GtkToggleButton" id="main_tab_button">

                    <property name="label">Main</property>
                    <property name="name">aurgh-tab-buttons</property>
                  </object>
                </child>

                <child>
                  <object class="GtkToggleButton" id="installed_tab_button">

                    <property name="label">Installed</property>
                    <property name="name">aurgh-tab-buttons</property>
                  </object>
                </child>
              </object>
            </child>

            <child>

              <object class="GtkBox">

                <property name="halign">end</property>
                <property name="spacing">10</property>
                <child>

                  <object class="GtkBox">

                    <property name="halign">end</property>
                    <child>

                      <object class="GtkLabel">

                        <property name="name">aurgh-criteria-labels</property>
                        <property name="label">search by</property>
                      </object>
                    </child>
                    <child>

                      <object class="GtkComboBoxText"
                        id="aurgh_search_by_combo">

                        <property name="name">aurgh-criteria-combos</property>
                        <items>

                          <item id="name">Name</item>
                          <item id="name-desc">Name &#38; Description</item>
                          <item id="maintainer">Maintainer</item>
                          <item id="keywords">Keywords</item>
                        </items>
                      </object>
                    </child>
                  </object>
                </child>

                <child>

                  <object class="GtkBox">

                    <property name="halign">end</property>
                    <child>

                      <object class="GtkLabel">

                        <property name="name">aurgh-criteria-labels</property>
                        <property name="label">sort by</property>
                      </object>
                    </child>
                    <child>

                      <object class="GtkComboBoxText" id="aurgh_sort_by_combo">

                        <property name="name">aurgh-criteria-combos</property>
                        <items>

                          <item id="Name">Name</item>
                          <item id="Popularity">Popularity</item>
                          <item id="NumVotes">Votes</item>
                        </items>
                      </object>
                    </child>
                  </object>
                </child>

                <child>

                  <object class="GtkBox">

                    <property name="halign">end</property>
                    <child>

                      <object class="GtkLabel">

                        <property name="name">aurgh-criteria-labels</property>
                        <property name="label">reverse</property>
                      </object>
                    </child>
                    <child>

                      <object class="GtkCheckButton" id="aurgh_reverse_check">

                        <property name="name">aurgh-reverse-check</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

            <child>

              <object class="GtkBox">

                <property name="name">aurgh-search-container</property>
                <property name="halign">end</property>
                <child>

                  <object class="GtkSearchEntry" id="aurgh_search_entry">

                    <property name="placeholder-text">Search package</property>
                    <property name="name">aurgh-search-entry</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <child>

          <object class="GtkBox" id="aurgh_content_box">

            <property name="hexpand">true</property>
            <property name="vexpand">true</property>
            <property name="halign">fill</property>
            <property name="valign">fill</property>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>